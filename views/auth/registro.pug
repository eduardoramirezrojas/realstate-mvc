extends ../layout/index
block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores   
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

        div.mt-8.mx-auto.max-w-md 
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") email
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="email" type="email" name="email" value= usuario ? usuario.email : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") password
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="password" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_passwor") repetir password
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="repite tu password" type="repetir_password" name="repetir_password")
                    
                    div.flex.item-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Â¿Ya tienes cuenta? Inicia sesion
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi password



                    input( class="w-full bg-indigo-600 text-white font-bold uppercase py-3 rounded-md hover:bg-indigo-700" type="submit" value="Crear cuenta")